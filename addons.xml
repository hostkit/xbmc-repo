<addon id="script.program.poweroptionandroid"
  name="PowerOption Android"
  version="1.0.1"
  provider-name="hostkit">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.repository" name="Hostkit XBMC Add-on Repository">
    <info compressed="false">https://raw.githubusercontent.com/hostkit/xbmc-repo/master/addons.xml</info>
    <checksum>https://raw.githubusercontent.com/hostkit/xbmc-repo/master/addons.xml.md5</checksum>
    <datadir zip="true">https://raw.githubusercontent.com/hostkit/xbmc-repo/master</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>android</platform>
    <summary lang="en">PowerOption Android</summary>
    <description lang="en">Shutdown or Reboots your Android device.</description>
	<disclaimer>Your device must already be rooted, and you will need to grant SU permissions to the script when prompted.</disclaimer>
  </extension>
</addon>
</addons>
