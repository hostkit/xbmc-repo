<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="PowerOption Android" name="PowerOption Android" version="1.0.1" provider-name="Hostkit">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="PowerOption Android">
        <info compressed="false">https://raw.githubusercontent.com/hostkit/xbmc-repo/master/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/hostkit/xbmc-repo/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/hostkit/xbmc-repo/master</datadir>
